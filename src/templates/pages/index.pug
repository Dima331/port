extends ../template

block variables
    - var title = 'Добро пожаловать'

block content
    .forest
      .welcome
        .welcome__content
          .welcome__login.login
            .login__title Авторизуйтесь
            .login__border
            form.login__form(action="#")
              .form__row
                .form__row-icon
                  svg.form__row-login
                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#login") 
                label(for="1")
                input(type="text", name="login" placeholder="Логин").login
              .form__row 
                .form__row-icon
                  svg.form__row-password
                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#password")  
                label(for="2")
                input(type="password", name="password" placeholder="Пароль")
              .form__row   
                label(for="3").form__row-torggle 
                  input(type="checkbox", name="checkbox" value="Я человек" id="3").form__toggle-input
                  .form__toggle-fake
                    svg.form__toggle-fake_flag.form__toggle-fake_check
                      use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#check")
                  .form__title Я человек
              .form__row.form__row-title
                .login__text Вы точно не робот?
              .form__row.form__row-last
                label(for="4").form__row-torggle 
                  input(type="radio", name="radio" value="Да" checked).form__toggle-input
                  .form__toggle-fake.form__toggle-fake_radio
                    .form__toggle-fake_flag.form__toggle-fake_dot
                  .form__title Да  
                label(for="5").form__row-torggle 
                  input(type="radio", name="radio" value="Да").form__toggle-input
                  .form__toggle-fake.form__toggle-fake_radio
                    .form__toggle-fake_flag.form__toggle-fake_dot
                  .form__title Не уверен 
        nav.nav
          ul.menu__list
            li.menu__item
              a.menu__item-link(href='#') На главную
            li.menu__item
              a.menu__item-link(href='#') Войти
