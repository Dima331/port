extends ../template

block variables
    - var title = 'Мои работы'

block content
    .wrapper  
        //include ../common/header.pug  
        header.header
            .header__social
                ul.social
                    li.social__item.social__item_margin
                        a.social__item-link(href='#')
                            svg.social__item-vk.social__item-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#vk") 
                    li.social__item.social__item_margin
                        a.social__item-link(href='#')
                            svg.social__item-git.social__item-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#github") 
                    li.social__item.social__item_margin
                        a.social__item-link(href='#')
                            svg.social__item-in.social__item-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#in") 
            .header__hamburger.hamburger
                button.hamburger__link
                    svg.hamburger__link-svg
                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#hamburger") 
            .header__placeholder 
                svg.header__placeholder-title
                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#portfolio_header")
            .header__content
                .user
                    .user__pic
                        img(src="assets/images/content/face.jpg", alt="W").user__pic-img
                    .user__description
                        .user__description-name Владимир Астахов
                        .user__description-info Личный сайт разработчика
            .header__arrow
                button.arrow-down
                    svg.arrow-down-svg
                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
            .triangle.tringle_fill_white
                svg(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none").traingle__pic
                    polygon(points="0,0   0,86   500.8,86   500.8,75.5").traingle__pic-left.traingle__pic-left_white
                    polygon(points="1000,0   1000,86   500,86   500,75.5").traingle__pic-right.traingle__pic-right_white
        
        
        
        main.main  
            section.section.myworks
                .myworks-title
                    .title-block
                        .title-block-pic
                            svg.title-block-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#works_header")        
                        h1.block-title Мои работы
                        .title-block__border
                .slider
                    .slider__info
                        .intelligence
                            h2.block-subtitle.block-subtitle-slider Сайт школы онлайн образования
                            .intelligence__text HTML, CSS, JAVASCRIPT
                            .intelligence__btn 
                                a(href="#").intelligence__btn-link 
                                    svg.intelligence__btn-svg
                                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#link")
                                    span Посмотреть сайт
                    .slider__display
                        img(src="assets/images/content/face.jpg", alt="face").slider__display-img
                    .slider__btns
                        .slider__btns-left.arrow.slide-list
                            button(href="#").arrow__left
                                svg.arrow__left-down
                                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
                            .slide-list__item
                                img(src="assets/images/content/face.jpg", alt="face").slide-list-img
                        .slider__btns-right.arrow.slide-list
                            button(href="#").arrow__right
                                svg.arrow__right-up
                                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
                            .slide-list__item
                                img(src="assets/images/content/face.jpg", alt="face").slide-list-img
                //.myworks__slider
                    ul.slider
                        li.slider__item
                            .slider__item-left
                                .slider__item-left-pic
                                    img(src="assets/images/content/work-1.png", alt="#")    
                            .slider__item-right
                                .info__slider
                                    .block-subtitle.block-subtitle-slider Сайт школы онлайн образования
                                    .info__slider-info HTML, CSS, JAVASCRIPT
                                    .info__slider-btn 
                                        a(href="#").info__slider-btn-link 
                                            svg.info__slider-btn-svg
                                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#link")
                                            span Посмотреть сайт
                //.myworks__slider-left
                //.myworks__slider-right

            section.section.about-me
                .about-me__content
                    .title-block
                        .title-block-pic.title-block-pic-top
                            svg.title-block-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#about_header")        
                        h1.block-title.block-title-about-me Что обо мне говорят
                        .title-block__border
                    ul.about-me__reviews.reviews
                        li.reviews__item
                            .reviews__item-pic 
                                img(src="assets/images/content/face_teacher.jpg", alt="#").reviews__item-img
                            blockquote.reviews__item-description.quot
                                p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sit, ea earum provident laboriosam exercitationem mollitia asperiores velit quasi sequi suscipit vero harum, recusandae ullam voluptate, vitae molestiae ipsum consequatur eos!
                                cite.quot__who
                                    .quot__who-name
                                        p Lorem ipsum
                                    .quot__who-job
                                        p Lorem ipsum
                            //.reviews__item-quot
                        li.reviews__item
                            .reviews__item-pic 
                                img(src="assets/images/content/face_teacher_2.jpg", alt="#").reviews__item-img
                            blockquote.reviews__item-description.quot
                                p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sit, ea earum provident laboriosam exercitationem mollitia asperiores velit quasi sequi suscipit vero harum, recusandae ullam voluptate, vitae molestiae ipsum consequatur eos!
                                cite.quot__who
                                    .quot__who-name
                                        p Lorem ipsum
                                    .quot__who-job
                                        p Lorem ipsum
                    .about-me__relations.about-me__relations_margin
                        form(action="#").about-me__form
                            h2.block-subtitle.block-subtitle_margin Связаться со мной
                            .form-inbut
                                .form__row
                                    label(for="name").about-me__form-label
                                        span.visually-hidden Имя
                                        input(type="text", name="login" placeholder="Имя" id="name").about-me__form-input
                                .form__row
                                    label(for="email").about-me__form-label
                                        span.visually-hidden Почта
                                        input(type="text", name="password" placeholder="Email" id="email").about-me__form-input
                                .form__row.form__row-last
                                    label(for="message").about-me__form-label
                                        span.visually-hidden Текст
                                        textarea(name="message",id="message" cols="30", rows="10" placeholder="Ваше сообщение")
                            ul.menu__list
                                li.menu__item
                                    a.menu__item-link(href='#') Отправить
                                li.menu__item
                                    button.menu__item-link(href='#') Очистить
                    .about-me__arrow.arrow-down
                        button(href="#").about-me__arrow-link
                            svg.arrow-down-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
        
        footer.footer
            include ../common/footer.pug