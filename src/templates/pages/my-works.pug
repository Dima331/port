                            //.reviews__item-quot
                        li.reviews__item
                            .reviews__item-pic 
                                img(src="assets/images/content/face_teacher_2.jpg", alt="#").reviews__item-img
                            blockquote.reviews__item-description.quot
                                p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sit, ea earum provident laboriosam exercitationem mollitia asperiores velit quasi sequi suscipit vero harum, recusandae ullam voluptate, vitae molestiae ipsum consequatur eos!
                                cite.quot__who
                                    .quot__who-name
                                        p Lorem ipsum
                                    .quot__who-job
                                        p Lorem ipsum


                    .about-me__relations.about-me__relations-margin
                        form(action="#").about-me__form
                            h2.block-subtitle.block-subtitle-margin Связаться со мной
                            .form__row
                                label(for="name").about-me__form-label
                                    input(type="text", name="login" placeholder="Имя" id="name").about-me__form-input
                            .form__row
                                label(for="email").about-me__form-label
                                    input(type="text", name="password" placeholder="Email" id="email").about-me__form-input
                            .form__row.form__row-last
                                label(for="message").about-me__form-label
                                    textarea(name="message",id="message" cols="30", rows="10" placeholder="Ваше сообщение")
                        ul.menu__list
                            li.menu__item
                                a.menu__item-link(href='#') Отправить
                            li.menu__item
                                a.menu__item-link(href='#') Очистить
                    .about-me__arrow.arrow-down
                        button(href="#").about-me__arrow-link
                            svg.arrow-down-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
        
        
        
        include ../common/footer.pug