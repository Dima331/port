extends ../template

block variables
    - var title = 'Мои работы'

block content
    .wrapper    
        header.header
            .header__social
                ul.social
                    li.social__item.social__item-header
                        a.social__item-link(href='#')
                            svg.social__item-vk.social__item-svg-header
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#vk") 
                    li.social__item.social__item-header
                        a.social__item-link(href='#')
                            svg.social__item-git.social__item-svg-header
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#github") 
                    li.social__item.social__item-header
                        a.social__item-link(href='#')
                            svg.social__item-in.social__item-svg-header
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#in") 
            .header__hamburger.hamburger
                button.hamburger__link
                    svg.hamburger__link-svg
                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#hamburger") 
            .header__placeholder 
                svg.header__placeholder-title
                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#portfolio_header")
            .header__content
                .header__user.user
                    .user__pic
                        img(src="assets/images/content/face.jpg", alt="face").user__pic-img
                    .user__description
                        .user__description-name Владимир Астахов
                        .user__description-info Личный сайт разработчика
            .header__arrow
                button.arrow-down
                    svg.arrow-down-svg
                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
            .triangle.tringle_fill_white.about__left-triangle
                svg(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none").traingle
                    polygon(points="0,0   0,86   500.8,86   500.8,75.5").left.left-white
                    polygon(points="1000,0   1000,86   500,86   500,75.5").right.right-white
        main.main  


            section.section.myworks
                .myworks-title
                    .title-block
                        .title-block-pic
                            svg.title-block-svg
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#works_header")        
                        h2.block-title Мои работы
                        .title-block__border
                .about__left-svg
                    //svg.about__left-about
                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#works_header")
                .slider
                    .slider__info
                        .intelligence
                            .block-subtitle.block-subtitle-slider Сайт школы онлайн образования
                            .intelligence__text HTML, CSS, JAVASCRIPT
                            .intelligence__btn 
                                a(href="#").intelligence__btn-link 
                                    svg.intelligence__btn-svg
                                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#link")
                                    span Посмотреть сайт
                    .slider__display
                        img(src="assets/images/content/face.jpg", alt="face").slider__display-img
                    .slider__btns
                        .slider__btns-left.arrow
                            button(href="#").arrow__left
                                svg.arrow__left-down
                                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")
                        .slider__btns-right.arrow
                            button(href="#").arrow__right
                                svg.arrow__left-up
                                    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")


                
                //.myworks__slider
                    ul.slider
                        li.slider__item
                            .slider__item-left
                                .slider__item-left-pic
                                    img(src="assets/images/content/work-1.png", alt="#")    
                            .slider__item-right
                                .info__slider
                                    .block-subtitle.block-subtitle-slider Сайт школы онлайн образования
                                    .info__slider-info HTML, CSS, JAVASCRIPT
                                    .info__slider-btn 
                                        a(href="#").info__slider-btn-link 
                                            svg.info__slider-btn-svg
                                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#link")
                                            span Посмотреть сайт
                //.myworks__slider-left
                //.myworks__slider-right





            section.section.about-me
                .about-me__content
                    .title-block
                        .title-block-pic.title-block-pic-top
