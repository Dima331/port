                        li.reviews__item
                            .reviews__item-pic 
                                img(src="assets/images/content/face_teacher_2.jpg", alt="teacher").reviews__item-img
                            blockquote.reviews__item-description.quot
                                p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sit, ea earum provident laboriosam exercitationem mollitia asperiores velit quasi sequi suscipit vero harum, recusandae ullam voluptate, vitae molestiae ipsum consequatur eos!
                                cite.quot__who
                                    .quot__who-name
                                        p Lorem ipsum
                                    .quot__who-job
                                        p Lorem ipsum
                .about-me__blur
                    .blur-wrapper
                        form(action="#" id="message").form.communications
                            h2.block-subtitle.block-subtitle_margin Связаться со мной
                            .form-inbut
                                .form__row.input-icon(v-bind:class="{ error : Error.IsName, formMargin : FormMargin.FormName }")
                                    label(for="name").communications__form-label.visually-hidden Имя
                                    input(type="text", name="login" placeholder="Имя" id="name" v-model="name").communications__form-input
                                    .input-icon__error(v-bind:class="{ errorOpacity : Error.IsName }")    
                                        .input-icon__error-text Вы не ввели Имя



                                .form__row.input-icon(v-bind:class="{ error : Error.IsEmail, formMargin : FormMargin.FormEmail }")
                                    label(for="email").communications__form-label.visually-hidden Почта
                                    input(type="text", name="password" placeholder="Email" id="email" v-model="email" ).communications__form-input
                                    .input-icon__error(v-bind:class="{ errorOpacity : Error.IsEmail }")    
                                        .input-icon__error-text Вы не ввели почту



                                .form__row.form__row-last.input-icon.input-icon__error_textarea(v-bind:class="{ error : Error.IsMessage, formMargin : FormMargin.FormMessage }")
                                    label(for="message").communications__form-label.visually-hidden Текст
                                    textarea(name="message",id="message" cols="30", rows="10" placeholder="Ваше сообщение" v-model="message").communications__form-textarea
                                    .input-icon__error.input-icon__error_textarea(v-bind:class="{ errorOpacity : Error.IsMessage }")    
                                        .input-icon__error-text Вы не ввели сообщение
                            ul.menu__list
                                li.menu__item
                                    button.menu__item-link(v-on:click="send(name,email,message, $event)") Отправить
                                li.menu__item
                                    button.menu__item-link(form="message" v-on:click="clear(name,email,message, $event)") Очистить  
                        .blur-wrapper__form 
                                    
                .about-me__arrow.arrow-down
                    button(href="#").about-me__arrow-link
                        svg.arrow-down-svg
                            use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprite/sprite.svg#arrow_down")

        footer.footer
            include ../common/footer.pug